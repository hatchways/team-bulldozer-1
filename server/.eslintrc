{
    "extends": "airbnb-base",
    "env": {
        "commonjs": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-underscore-dangle": "off",
        "linebreak-style": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    }
}