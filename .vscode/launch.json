    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Client",
            "cwd": "${workspaceFolder}/client",
            "command": "npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Debug Server",
            "cwd": "${workspaceFolder}/server",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "port": 12345,
        }
    ]
}